<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="itemCell" alignment="CENTER_LEFT" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.ufrpe.timeshare.gui.controllers.celulas.ControllerItemCellBemReserva">
    <ImageView fx:id="imagemBem" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
    <VBox spacing="5.0">
        <Label fx:id="nomeBem" style="-fx-font-weight: bold;" />
        <Label fx:id="descricaoBem" />
        <Label fx:id="localizacaoBem" />
        <Label fx:id="capacidadeBem" />
    </VBox>
    <Button text="Reservar" onAction="#handleReservarButtonAction" />
</HBox>