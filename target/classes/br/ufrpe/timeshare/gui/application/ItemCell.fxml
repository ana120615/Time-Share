<HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.ufrpe.timeshare.gui.controllers.ControllerItemCell">
   <children>
      <Button fx:id="itemButton" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" text="Button" HBox.hgrow="ALWAYS">
