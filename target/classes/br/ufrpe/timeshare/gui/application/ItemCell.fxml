                        <Image url="@images/picture.png" />
                     </image>
                  </ImageView>
                  <VBox alignment="CENTER_LEFT" prefHeight="90.0" prefWidth="247.0">
                     <children>
                        <Label fx:id="itemLabelNome" prefHeight="22.0" prefWidth="158.0" text="Nome do Bem">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <Label fx:id="itemLabelDescricao" text="Descrição" />
                     </children>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
